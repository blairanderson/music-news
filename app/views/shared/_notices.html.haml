- if notice
  .alert.alert-warning.alert-dismissable
    %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", type: "button"} &#215;
    %strong Notice:
    = notice

- if alert
  .alert.alert-danger.alert-dismissable
    %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", type: "button"} &#215;
    %strong Alert:
    = alert

- if current_account && !current_account.email_verified?
  .text-center
    = link_to "Verify Email?", finish_signup_path(current_account)
