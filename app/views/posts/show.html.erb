<article class="post">
  <div class="post-header">
    <h1 class="post-title">
      <%= @post.title.html_safe %>
    </h1>

    <div class="post-details">
      <span class="author">by <%= @post.author_name %></span>
      <%= image_tag(@post.author_image, size: "25x25", style: "display: inline") %>
      <span class="date">published <%= time_ago_in_words @post.published %></span>
    </div>
  </div>

  <div class="container">
    <div class="post-content col-xs-12 col-sm-6 col-sm-offset-3">
      <%= @post.content.html_safe %>
    </div>
  </div>

</article>
