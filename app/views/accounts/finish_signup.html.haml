#add-email.container
  %h1 Please confirm your email address.
  .row
    .col-xs-6
      = form_for(current_account, as: 'account', url: finish_signup_path(current_account), html: { role: 'form'}) do |f|
        - if @show_errors && current_account.errors.any?
          #error_explanation
            - current_account.errors.full_messages.each do |msg|
              = msg
        .form-group
          .controls
            = f.email_field :email, :autofocus => true, :value => '', class: 'form-control input-lg', placeholder: 'Example: email@me.com'
            %p.help-block
              %strong We promise not to sell, rent, or share your email address with anyone.
        .form-group
          = f.submit 'Verify Email', class: 'btn btn-primary btn-block'
